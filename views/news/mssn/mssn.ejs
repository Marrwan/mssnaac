<body>
<main class="pt-4">
  <!-- Intro -->
  <h1 class="text-center dark-grey-text pb-3 mt-5 pt-5 font-weight-bold">
    <strong>MSSN NEWS</strong>
  </h1>
  <p class="grey-text text-center mb-4 text-uppercase spacing">Welcome on mssn news</p>

  <!-- Grid row -->
  <div class="flex-center page-content">

    <p class="grey-text text-center mb-5 mx-3">
      <em>"We are mad."</em>
    </p>

  </div>
  <!-- Grid row -->

  <!-- Intro -->

  <!-- NEWS -->
  <section>

    <div class="container-fluid grey lighten-3 pb-5">
      <%- include('../../partials/message.ejs') %>
      <hr class="pb-5">

      <div class="container">

        <div class="card px-4 px-lg-5">

          <div class="row pt-5">

            <!-- Main listing -->
            <div class="col-lg-12 justify-content-center col-12 mt-1">

              <!-- Section: Classic blog listing -->
              <section class="section classic-blog-listing">

                <% mssnnews.forEach((mssnnews)=>{ %>
                <!-- Grid row STARTS EWS -->
                <div class="row mb-5">
                  <!-- Grid column -->
                  <div class="col-md-12 text-center">

                    <!-- Image -->
                    <div class="view overlay z-depth-1 mb-3">
                      <img src="https://mdbootstrap.com/img/Photos/Slides/img%20%28141%29.jpg" class="img-fluid rounded">
                      <a href="#!">
                        <div class="mask rgba-white-slight waves-effect waves-light"></div>
                      </a>
                    </div>

                    <!-- Excerpt -->
                    <a href="" class="">
                      <span class="badge badge-danger mb-2">travel</span>
                    </a>

                    <h2 class="text-center font-weight-bold dark-grey-text my-4">
                      <strong><%= mssnnews.title %></strong>
                    </h2>

                    <p class="dark-grey-text"><%= mssnnews.excerpt %>
                    </p>

                    <div class="text-center pb-2">
                      <a  href="/news/mssn/<%= mssnnews.title%>" class="btn btn-transparent btn-sm font-weight-bold btn-rounded dark-grey-text waves-effect waves-light">Read more</a>
                    </div>

                    <!-- Post data -->
                    <div class="post-data mt-3 pt-3 grey-text">
                      <h6>By
                        <a href="#!" class="blue-text"><%= mssnnews.author %></a> on <%= mssnnews.created.toDateString() %>
                        <a href="#!" class="dark-grey-text">
                          <i class="far fa-comments pr-2 pl-3"></i><%= mssnnews.comments.length %></a>
                      </h6>

                      <ul class="list-unstyled list-inline circle-icons">
                        <!-- Facebook -->
                        <li class="list-inline-item">
                          <a class="fb-ic">
                            <i class="fab fa-facebook-f"></i>
                          </a>
                        </li>
                        <!-- Twitter -->
                        <li class="list-inline-item">
                          <a class="tw-ic">
                            <i class="fab fa-twitter"></i>
                          </a>
                        </li>
                        <!-- Google + -->
                        <li class="list-inline-item">
                          <a class="gplus-ic">
                            <i class="fab fa-google-plus-g"></i>
                          </a>
                        </li>
                      </ul>

                    </div>

                  </div>
                  <!-- Grid column -->
                </div>
                <!-- Grid row -->
                <%})%>
              </section>
              <!-- Section: Classic blog listing -->

              <!-- Pagination dark grey -->
              <nav class="mb-5 pb-2">
                <ul class="pagination pg-dark flex-center">
                  <!-- Arrow left -->
                  <li class="page-item">
                    <a class="page-link waves-effect waves-effect" aria-label="Previous">
                      <span aria-hidden="true">«</span>
                      <span class="sr-only">Previous</span>
                    </a>
                  </li>

                  <!-- Numbers -->
                  <li class="page-item active">
                    <a class="page-link waves-effect waves-effect">1</a>
                  </li>
                  <li class="page-item">
                    <a class="page-link waves-effect waves-effect">2</a>
                  </li>
                  <li class="page-item">
                    <a class="page-link waves-effect waves-effect">3</a>
                  </li>
                  <li class="page-item">
                    <a class="page-link waves-effect waves-effect">4</a>
                  </li>
                  <li class="page-item">
                    <a class="page-link waves-effect waves-effect">5</a>
                  </li>

                  <!-- Arrow right -->
                  <li class="page-item">
                    <a class="page-link waves-effect waves-effect" aria-label="Next">
                      <span aria-hidden="true">»</span>
                      <span class="sr-only">Next</span>
                    </a>
                  </li>
                </ul>
              </nav>
              <!-- Pagination dark grey -->

            </div>
            <!-- Main listing -->

          </div>
        </div>

      </div>

    </div>

  </section>
  <!-- Blog -->

</main>



   <% if(User){ %>
   <%     if(User.userType == "admin"){ %>
    <a href="/news/mssn/new" class="btn btn-primary">Add new post</a>
   <%     } %>
   <% }%>
</div>
</body>